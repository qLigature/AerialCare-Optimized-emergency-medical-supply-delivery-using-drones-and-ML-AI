  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

  <script>
    const x = document.getElementById("demo");

    function getLocation() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(showPosition);
      } else {
        x.innerHTML = "Geolocation is not supported by this browser.";
      }
    }

    function showPosition(position) {
      x.innerHTML = position.coords.latitude + ", " + position.coords.longitude;
    }

    document.querySelector('form').addEventListener('submit', async (e) => {
      e.preventDefault();
      const product = document.getElementById('inputGroupSelectProduct').value;
      let coords;

      // Get saved coordinates from demo
      if (x.innerHTML === "No destination detected") {
        alert('Please select a destination');
        return;
      } else {
        const latitude = Number(x.innerHTML.split(',')[0]);
        const longitude = Number(x.innerHTML.split(',')[1]);
        coords = [latitude, longitude];
      }
      const id = await sessionStorage.getItem('user');

      console.log(coords);

      fetch('http://localhost:9001/buy', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          user_id: id,
          product,
          location: coords,
          note: 'sample note',
        }),
      })
        .then((res) => res.json())
        .then((data) => {

          if (data.status === 'success') {
            alert('Order placed successfully');
            window.location.href = './dashboardPage';
            return;
          }
          alert(data.message);
          return;
        })
        .catch((err) => console.log(err));
    });
  </script>
